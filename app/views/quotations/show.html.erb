<div class=" fondo_formulario">

   
      
    <h1 class='text-center'>Cotizaciones</h1>

    <div class='table-responsive margen_abajo'>
    <table class='table table-striped table-bordered table-hover'>
      <thead>
        <tr> 
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Telefono</th>
          <th>email</th>
          <th>Perfil</th>
          <th>Compañia</th>
          <th>Documentos mensuales</th>
          <th>En que te puedo ayudar</th>
          <th>Fecha de creación</th>
          <th>Borrar</th>
          <th>Cotizar</th>
          <th colspan="8"></th>
        </tr>
      </thead>

      <tbody>
        <% @quotation.each do |quotation| %>
          <tr class="bg-danger">
            <td><%= quotation.name %></td>
            <td><%= quotation.last_name %></td>
            <td><%= quotation.phone %></td>
            <td><%= quotation.email %></td>
            <td><%= quotation.profile %></td>
            <td><%= quotation.compañy_size %></td>
            <td><%= quotation.doc_month %></td>
            <td><%= quotation.help_you%></td>
            <td><%= quotation.created_at%></td>
            <td><%= link_to 'Destroy', quotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            
            <td>
            <% if quotation.status == false%>
            <%= link_to 'Cotizar', quotation_status_path(quotation), method: :patch %>
            <% else %>
            <%= link_to 'Cotizado', quotation_status_path(quotation), method: :patch %>
            <tr class='bg-success'>
          
            <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

<br>

</div>